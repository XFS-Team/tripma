---
import Text from '@/components/common/Text/Text.astro';
import type { IFlightInfo } from '@/model/flight';
import { cx } from 'class-variance-authority';

interface Props {
  infoFlight: IFlightInfo;
  isScroll?: boolean;
}

const { infoFlight, isScroll } = Astro.props;

const {
  srcImage,
  airline,
  arrival,
  departure,
  duration,
  price,
  stops,
  time,
  trip,
} = infoFlight;
---

<div
  class={cx({
    'overflow-x-auto': isScroll,
  })}
>
  <div
    class={`flex items-center px-2 lg:px-4 py-1.5 cursor-pointer hover:bg-purple-white my-1 rounded border border-solid w-[700px] ${
      false ? 'bg-purple-white border-primary' : 'border-transparent'
    }`}
  >
    <img class="mr-2 lg:mr-6" src={srcImage} alt="avt" />
    <div class="flex flex-1">
      <div class="flex flex-col gap-y-1 w-[160px] lg:w-[180px]">
        <Text className="text-sm md:text-base text-grey-900">{duration}</Text>
        <Text className="text-sm md:text-base text-grey-400">{airline}</Text>
      </div>
      <Text
        className="text-sm md:text-base text-grey-900 w-[140px] lg:w-[180px]"
      >
        {departure} - {arrival}
      </Text>
      <div class="flex flex-col gap-y-1 flex-1 text-end max-w-[200px]">
        <Text className="text-sm md:text-base text-grey-900">{stops}</Text>
        <Text className="text-sm md:text-base text-grey-400">{time}</Text>
      </div>
      <div class="flex flex-col gap-y-1 w-[130px] text-end">
        <Text className="text-sm md:text-base text-grey-900">{price}</Text>
        <Text className="text-sm md:text-base text-grey-400">{trip}</Text>
      </div>
    </div>
  </div>
</div>
