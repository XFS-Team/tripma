---
import arrivalDownIcon from '/icons/arrival-down.svg';
import arrivalUpIcon from '/icons/arrival-up.svg';
import personIcon from '/icons/person.svg';
import calendarIcon from '/icons/calendar.svg';
import { LIST_DATA, LIST_DATA_ADULT } from '@/constants';
import Dropdown from '@/components/common/Dropdown/Dropdown.astro';
---

<section class="container-no-padding">
  <div
    class="bg-[url('/images/world-map.png')] bg-cover bg-no-repeat lg:h-[700px]"
  >
    <div class="flex flex-col items-center justify-center px-4">
      <h1
        class="font-extrabold text-center max-w-[756px] bg-clip-text bg-gradient-to-r from-indigo-400 to-indigo-600 text-transparent py-10 text-6xl my-8 lg:text-8xl xl:my-12"
      >
        Itâ€™s more than just a trip
      </h1>
      <div
        class="w-full sm:w-[420px] xl:w-auto flex justify-center xl:border-2 border-solid border-grey-200 flex-wrap"
      >
        <div
          class="flex flex-wrap border-2 border-solid border-grey-200 rounded xl:border-none xl:rounded-none"
        >
          <Dropdown
            listDropdown={LIST_DATA}
            icon={arrivalUpIcon}
            placeholder="From where?"
            className="w-[calc(50%-1px)] xl:w-[325px]"
          />
          <span class="inline-block h-[49px] w-0.5 bg-grey-200"></span>
          <Dropdown
            listDropdown={LIST_DATA}
            icon={arrivalDownIcon}
            placeholder="Where to?"
            className="w-[calc(50%-1px)] xl:w-[325px]"
          />
          <span class="w-full h-0.5 xl:h-[49px] xl:w-0.5 bg-grey-200"></span>
          <Dropdown
            icon={calendarIcon}
            listDropdown={LIST_DATA}
            placeholder="Date - return"
            className="w-full xl:w-[252px]"
          />
        </div>
        <span class="hidden xl:inline-block h-[49px] w-0.5 bg-grey-200"></span>
        <Dropdown
          listDropdown={LIST_DATA_ADULT}
          icon={personIcon}
          placeholder="1 adult"
          className="hidden xl:block w-[200px]"
          type="counter"
        />
        <a
          class="bg-primary text-center rounded text-grey-100 hover:bg-purple-dark w-full max-w-[420px] xl:w-auto px-5 py-2.5 mt-4 xl:mt-0 flex items-center justify-center"
          href="/search">Search</a
        >
      </div>
    </div>
  </div>
</section>
